<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.su.chinaso.suchef.SplashActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="292dp"
        android:layout_centerHorizontal="true"
        android:layout_height="285dp"
        app:lottie_fileName="emoji_wink.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"

 />
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/animation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/takeOrderTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_take_order"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_take_order"
            android:drawablePadding="20dp"/>

        <TextView
            android:id="@+id/newDishTv"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/takeOrderTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_dish"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_new_dish"
            android:drawablePadding="20dp"/>

    </RelativeLayout>






</RelativeLayout>
